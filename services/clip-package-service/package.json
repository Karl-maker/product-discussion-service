{
  "name": "@services/clip-package-service",
  "version": "1.0.0",
  "description": "Clip packages (video metadata: thumbnailUrl, mediaUrl, characterName, usedWords, caption, language)",
  "main": "dist/handler/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "package": "esbuild src/handler/index.ts --bundle --platform=node --target=node20 --outfile=dist/index.js && (cd dist && zip -q ../function.zip index.js)",
    "deploy": "echo Deploying clip-package-service..."
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.975.0",
    "@aws-sdk/lib-dynamodb": "^3.975.0",
    "aws-lambda": "^1.0.7"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.160",
    "@types/node": "^25.0.10",
    "esbuild": "^0.27.2",
    "typescript": "^5.9.3"
  }
}
