{
  "name": "@services/package-generation-service",
  "version": "1.0.0",
  "description": "Consumes voice session SQS, uses analysis results and OpenAI to generate/update user packages per language",
  "main": "dist/handler/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "package": "esbuild src/handler/index.ts --bundle --platform=node --target=node20 --outfile=dist/index.js && zip function.zip dist/index.js",
    "deploy": "echo Deploying package-generation-service..."
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.975.0",
    "@aws-sdk/client-secrets-manager": "^3.975.0",
    "@aws-sdk/client-sns": "^3.975.0",
    "@aws-sdk/client-sqs": "^3.975.0",
    "@aws-sdk/lib-dynamodb": "^3.975.0",
    "@aws-sdk/util-dynamodb": "^3.975.0",
    "aws-lambda": "^1.0.7",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.160",
    "@types/node": "^25.0.10",
    "esbuild": "^0.27.2",
    "typescript": "^5.9.3"
  }
}
